# ESPHome Secrets Configuration Example
# Copy this file to secrets.yaml and fill in your actual values

# WiFi credentials
wifi_ssid: "YourWiFiNetwork"
wifi_password: "YourWiFiPassword"

# ESPHome API encryption key
# Generate with: esphome wizard
# Or use: openssl rand -base64 32
api_encryption_key: "your-32-character-api-encryption-key-here"

# OTA (Over-The-Air) update password
# Choose a secure password for firmware updates
ota_password: "your-secure-ota-password"

# Fallback AP password
# Used when WiFi connection fails
fallback_password: "fallback-ap-password"
